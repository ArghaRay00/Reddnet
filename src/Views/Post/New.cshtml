@model Reddnet.Models.DataModels.PostDataModel

@{
}

<form asp-controller="Post" asp-action="New" method="post" enctype="multipart/form-data">
    <div class="container" style="flex-direction: row">
        <div class="form-group">
            <label>Cover</label>

            <label for="imageInput">
                <img id="imageDisplay" src="~/images/Default.png" alt="COVER" height="200" width="200" />
                <input id="imageInput" type="file" name="_formFile" />
            </label>
        </div>

        <div style="flex-direction: column; width: 100%; margin-left: 15px;">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" />
            </div>

            <div class="form-group">
                <label asp-for="Preview"></label>
                <textarea style="height: 128px" asp-for="Preview"></textarea>
            </div>
        </div>
    </div>

    <div class="container" style="margin-top: 10px;">
        <div class="form-group">
            <label asp-for="Link"></label>
            <input asp-for="Link">
        </div>
    </div>

    <div class="container" style="margin-top: 10px;">
        <div class="form-group">
            <label asp-for="Tags"></label>
            <input asp-for="Tags">
        </div>

        <div class="form-group">
            <label asp-for="Content">Text</label>
            <textarea asp-for="Content"></textarea>
        </div>

        <input class="clickLink" type="submit" value="Upload" />

        <div class="errors" asp-validation-summary="All"></div>
    </div>
</form>

