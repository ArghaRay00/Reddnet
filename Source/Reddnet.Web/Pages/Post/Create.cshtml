@page
@model Reddnet.Web.Pages.Post.CreateModel
@{
    ViewData["Title"] = "Create Post";
}

<div class="container box outline round">
    <form class="form p-a-1 m-y-block-2" method="post" enctype="multipart/form-data">
        <h1 class="font big">
            Create Post
        </h1>

        <div class="group m-y-block-1">
            <label asp-for="Community"></label>
            <select class="input" asp-for="Community" asp-items="@(new SelectList(Model.Communities, "Id", "Name"))"></select>
        </div>
        <div class="group m-y-block-1">
            <label asp-for="Image"></label>
            <input class="input" asp-for="Image" />
        </div>
        <div class="group m-y-block-1">
            <label asp-for="Title"></label>
            <input class="input" asp-for="Title" />
        </div>
        <div class="group m-y-block-1">
            <label asp-for="Text"></label>
            <textarea class="input" asp-for="Text"></textarea>
        </div>

        <div class="group">
            <div asp-validation-summary="All"></div>
            <button class="btn primary" type="submit">Create Post</button>
        </div>
    </form>
</div>

