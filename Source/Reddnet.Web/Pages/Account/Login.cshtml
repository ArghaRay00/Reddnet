@page
@model Reddnet.Web.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container m-y-block-2 flex col">
    <div class="box outline round">
        <form class="form p-a-1 m-y-block-2" method="post">
            <h1 class="font big">
                Login
            </h1>

            <div class="group m-y-block-1">
                <label asp-for="Email"></label>
                <input class="input" asp-for="Email" />
            </div>
            <div class="group m-y-block-1">
                <label asp-for="Password"></label>
                <input class="input" asp-for="Password" />
            </div>

            <div class="group m-y-block-2">
                <div asp-validation-summary="All"></div>
                <button class="btn primary" type="submit">
                    Login
                </button>
                <div class="flex row center m-x-block-1">
                    <hr class="hr stretch" />
                    <p>
                        OR
                    </p>
                    <hr class="hr stretch" />
                </div>
                <a class="btn primary light" asp-page="@RouteConstants.AccountRegister" asp-route-returnUrl="@Model.ReturnUrl">
                    Register?
                </a>
            </div>
        </form>
    </div>
    <partial name="/Pages/Shared/_About.cshtml" />
</div>

